<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">


    <ImageView
        android:id="@+id/back_cosmo"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_cosmoobject" />

    <ImageView
        android:id="@+id/back_icons"
        android:layout_width="480dp"
        android:layout_height="600dp"
        android:layout_below="@+id/back_cosmo"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_icons" />

    <ImageView
        android:id="@+id/list_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/back_icons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/icon_comet" />

    <ImageView
        android:id="@+id/list_visibility"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/back_icons"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/list_type"
        android:layout_toRightOf="@+id/list_type"
        app:srcCompat="@drawable/eye_comet" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/list_frame"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/list_image"
        android:layout_alignStart="@+id/list_image"
        android:layout_alignTop="@+id/list_image"
        app:srcCompat="@drawable/frame_comet" />

    <ImageView
        android:id="@+id/back_name"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/list_image"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/list_image"
        android:layout_toRightOf="@+id/list_image"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_name" />

    <ImageView
        android:id="@+id/back_info"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/selected_image"
        android:layout_alignLeft="@+id/back_name"
        android:layout_alignStart="@+id/back_name"
        android:layout_below="@+id/back_name"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_info" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/back_name"
        android:layout_alignStart="@+id/back_name"
        android:layout_alignTop="@+id/back_name"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back_info"
        android:layout_alignEnd="@+id/back_info"
        android:layout_alignLeft="@+id/back_info"
        android:layout_alignRight="@+id/back_info"
        android:layout_alignStart="@+id/back_info"
        android:layout_below="@+id/back_name"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textSize="10sp" />
</RelativeLayout>
